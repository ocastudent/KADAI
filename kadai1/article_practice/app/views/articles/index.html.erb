<% if flash[:notice] %>
  <p style="color: green;"><%= flash[:notice] %></p>
<% elsif flash[:alert] %>
  <p style="color: red;"><%= flash[:alert] %></p>
<% end %>

<h1>投稿一覧</h1>

<%= link_to "新規投稿", articles_new_path %>

<table style="border-collapse: collapse; width: 100%;">
  <thead>
    <tr>
      <th style="border: 1px solid #000; padding: 8px;">タイトル</th>
      <th style="border: 1px solid #000; padding: 8px;">投稿内容</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td style="border: 1px solid #000; padding: 8px;">
          <%= link_to article.title, article_path(article) %>
        </td>
        <td style="border: 1px solid #000; padding: 8px;">
          <%= article.content %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
